import random
resposta= int(input("Vamos jogar par ou impar? Digite 1 para sim e 0 para não: "))
if resposta == 1:
	print("Vamos la!")
  npessoa= int(input("Digite um número de 1 a 10: ")
  if npessoa > 10 :
      print("Vishhhhhhhh, número invalido, tenta denovo!")
  elif npessoa <= 10 :
      escolha= int(input("Digite zero para par e um para impar: ")
      maq= (random.randrange(0, 11))
      print("O número escolhido por você foi: ", npessoa)
      print("O número escolhido pela máquina foi: ", maq)
      resultado= npessoa + maq
      if resultado % 2 == 0 and escolha == 0:
          print("Você escolheu par e a soma dos números deu par, você venceu!")
      elif resultado % 2 == 0 and escolha == 1:
          print("Você escolheu ímpar e a soma dos números deu par, você perdeu!")
      elif resultado % 2 == 1 and escolha == 1:
          print("Você escolheu ímpar e a soma dos números deu ímpar, você venceu!")
      elif resultado % 2 == 1 and esoclha == 0:
          print("Você escolheu par e a soma deu ímpar, você perdeu!")
elif resposta == 0:
    print("Ok joagmos mais tarde, ate mais!)
